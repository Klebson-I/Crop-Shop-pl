

<div class="singleProductForm">
    <img src="{{product.img}}" alt="">
    <form action="/products/{{product.name}}" method="POST" class="singleProductForm__form">
        <h2>{{product.name}}</h2>

        <p>Cena : {{product.price}}z≈Ç/100g  (max : {{product.maxAmount}} kg)</p>

        <div class="weightInputRangeDiv">
            <input class="weightInputRange" type="range" step="1" max="{{multiplyAmount product.maxAmount}}" name="weightInput"> g
        </div>

        <div class="weightInputNumberDiv">
            <input type="number" class="weightInputNumber"> g
        </div>

        <a href="/products/{{this.name}}">
            <button type="submit" class="choseProduct">
                <img src="/images/busket-icon.png" alt="">
            </button>
        </a>
    </form>
</div>